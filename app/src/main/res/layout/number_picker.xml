<merge xmlns:_="http://schemas.android.com/apk/res/android">

    <hutt.tim.eggtimer.widgets.NumberPickerButton _:id="@+id/increment"
        _:layout_width="fill_parent"
        _:layout_height="wrap_content"
        _:background="@drawable/timepicker_up_btn" />

    <EditText _:id="@+id/timepicker_input"
        _:layout_width="fill_parent"
        _:layout_height="wrap_content"
        _:gravity="center"
        _:singleLine="true"
        style="?android:attr/textAppearanceLargeInverse"
        _:textColor="@android:color/primary_text_light"
        _:textSize="30sp"
        _:background="@drawable/timepicker_input" />

    <hutt.tim.eggtimer.widgets.NumberPickerButton _:id="@+id/decrement"
        _:layout_width="fill_parent"
        _:layout_height="wrap_content"
        _:background="@drawable/timepicker_down_btn" />

</merge>